# BErozgar - Server Environment Variables
# Copy to .env and fill in real values

# Server
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://berozgar:berozgar_dev@localhost:5432/berozgar?schema=public

# JWT
# IMPORTANT: Generate a real secret for production (min 32 chars)
JWT_SECRET=dev-secret-change-me-in-production-minimum-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_DAYS=7

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com

# CORS
CORS_ORIGIN=http://localhost:5173

# Email delivery scaffolding
# log  = development-safe logging provider
# smtp = reserved for real SMTP implementation
EMAIL_PROVIDER=log
EMAIL_FROM=noreply@berozgar.local
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Sentry (optional in dev)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
